$("#<%= dom_id @task %>").replaceWith("<%= escape_javascript(render(@task)) %>")
$("#<%= dom_id @task %> label").effect('highlight')
<% if @list.completed? %>
    $("#<%= dom_id(@list) %>").find(".complete").addClass("icon-ok");
<% else %>
    $("#<%= dom_id(@list) %>").find(".complete").removeClass("icon-ok");
<% end %>
