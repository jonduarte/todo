#tasks {
  li {
    list-style-type: none;
    position:relative;
    .trash {
      width: 16px;
      height: 16px;
      overflow: hidden;
      text-indent: -9000px;
      background: url(<%= asset_path("trash.png") %>) no-repeat;
      float: left;
      position: absolute;
      left: -40px;
      top: 1px;
    }
  }
  form {
    label.checkbox {
      position: absolute;
      top: -0;
      left: -18px;
    }
  }
}

.mark-as-done{
  text-decoration: line-through;
}
